<div class="page" id="<%= @page_title.downcase %>">
  <div class="index container">
    <header class="page-header">
      <h1 class="page-title"><%= @page_title %></h1>
    </header>
    <div class="row">
      <% @projects.each do |project| %>
        <div class="col-xs-12 col-md-4">
          <div class="panel panel-default">
            <div class="panel-image-wrapper">
              <% if project.image.blank? %>
                <%= image_tag('https://s3.amazonaws.com/camronkhan/images/image-unavailable.jpg', alt: 'Image Not Available', class: 'panel-image') %>
              <% else %>
                <%= image_tag(project.image, alt: project.title, class: 'panel-image') %>
              <% end %>
            </div>
            <div class="panel-body">
              <p class="h4"><%= project.title %></p>
              <% unless project.description.blank? %>
                <p><%= truncate(project.description, length: 240, separator: ' ') %></p>
              <% end %>
            </div>
            <div class="button-wrapper text-center">
              <%= link_to 'View', project, class: 'button button-primary' %>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>