<div class="row">
	<div class="col-xs-12 col-md-8">
		<h2 class="h3"><%= project.title %></h2>
		<p class="lead"><%= project.description %></p>
	</div>
	<div class="col-xs-12 col-md-4">
		<%= link_to project_path(project) do %>
			<div class="featured-project-image-wrapper image-right">
				<%= image_tag project.image, alt: project.title, class: 'featured-project-image' %>
			</div>
		<% end %>
	</div>
</div>