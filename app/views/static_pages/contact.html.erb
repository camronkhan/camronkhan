<div class="page container" id="<%= @page_title.downcase %>">
	<header class="page-header">
		<h1 class="page-title"><%= @page_title %></h1>
	</header>
	<p class="lead"><%= @contact_me %></p>
	<form action="https://formspree.io/camron.khan@gmail.com" method="POST">
		<div class="form">
			<div class="form-group">
				<label>Name</label><br>
				<input type="text" placeholder="First and Last" name="Name" class="form-control">
			</div>
			<div class="form-group">
				<label>Email</label><br>
				<input type="text" placeholder="example@email.com" name="Email" class="form-control">
			</div>
			<div class="form-group">
				<label>Message</label><br>
				<textarea type="text" placeholder="What's on your mind?" name="Message" class="form-control" rows="8"></textarea>
			</div>
			<div class="button-wrapper">
				<input type="submit" value="Submit" class="button button-primary">
				<%= link_to 'Cancel', contact_path, class: 'button button-secondary' %>
			</div>
		</div>
	</form>
</div>